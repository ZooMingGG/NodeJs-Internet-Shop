<h1>Add new Course</h1>
<form action="/add" method="POST">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required>
    <label for="title">Course Name</label>
    <span class="helper-text" data-error="Course name is required"></span>
  </div>
  <div class="input-field">
    <input id="price" name="price" type="number" class="validate" required min="1">
    <label for="price">Course Price</label>
    <span class="helper-text" data-error="Course price is required"></span>
  </div>
  <div class="input-field">
    <input id="image" name="imageUrl" type="text" class="validate" required>
    <label for="image">Course Image</label>
    <span class="helper-text" data-error="Course image is required"></span>
  </div>
  <button class="btn btn-primary">
    Add Course
  </button>
</form>